<%= form_for @user, :html => { :multipart => true, :class => 'form-horizontal' } do |f| %>
  <%= render :partial => 'errors' , locals: { :item => @user }%>
  <div class="control-group">
    <%= f.label :user_name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :user_name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :password, 'Password', :class => 'control-label' %>
    <div class="controls">
      <%= f.password_field :password, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :password_confirmation, 'Confirm Password', :class => 'control-label' %>
    <div class="controls">
      <%= f.password_field :password_confirmation, :class => 'text_field' %>
    </div>
  </div>
  <% if session[:admin] == true %>
    <div class="control-group">
      <%= f.label :agreement_link, :class => 'control-label' %>
      <div class="controls">
        <%= f.file_field :agrement %>
      </div>
    </div>
  <% end %>

  <div class="well">
    <h5>Listing: </h5>
    <%= f.fields_for :listing do |builder| %>
      <div class="control-group">
        <%= builder.label :name, :class => 'control-label' %>
        <div class="controls">
          <%= builder.text_field :name, :class => 'text_field' %>
        </div>
      </div>
      <div class="control-group">
        <%= builder.label :offer, :class => 'control-label' %>
        <div class="controls">
          <%= builder.text_area :offer, :class => 'text_field' %>
        </div>
      </div>
      <div class="control-group">
        <%= builder.label :expires, :class => 'control-label' %>
        <div class="controls">
          <%= builder.date_field :expires, :class => 'text_field' %>
        </div>
      </div>
      <div class="control-group">
        <%= builder.label :menu, :class => 'control-label' %>
        <div class="controls">
          <%= builder.text_area :menu, :class => 'text_field' %>
        </div>
      </div>
      <div class="control-group">
        <%= builder.label :available, :class => 'control-label' %>
        <div class="controls">
        <%= builder.select :available, options_for_select([['True', 1], ['False', 0]]) %>
        </div>
      </div>
    <% end %>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                @user, :class => 'btn' %>
  </div>
<% end %>
