<%= form_tag login_path, :class => 'form-horizontal'  do %>
  
  <div class="control-group">
    <%= label_tag :user_name, 'UserName', :class => 'control-label' %>
    <div class="controls">
      <%= text_field_tag :user_name, params[:user_name], :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= label_tag :password, 'Password', :class => 'control-label' %>
    <div class="controls">
      <%= password_field_tag :password, params[:password], :class => 'text_field' %>
    </div>
  </div>
  
  <div class="form-actions">
    <%= submit_tag 'Login', :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")), root_path, :class => 'btn' %>
  </div>
<% end %>